                                    img(src="../dummy/pool/pool_1.png", class="service-slider-item-img")
                                div(class="service-slider-item")
                                    img(src="../dummy/pool/pool_1.png", class="service-slider-item-img")
                            div(class="service-slider-nav")
                                span(class="service-slider-nav-item service-slider-nav-item--prev")
                                    include ../../prod/svg/larr.svg
                                span(class="service-slider-nav-counter")
                                    span(class="service-slider-nav-counter-current") 1
                                    span(class="service-slider-nav-counter-divider") 
                                    span(class="service-slider-nav-counter-all") &nbsp;
                                span(class="service-slider-nav-item service-slider-nav-item--next")
                                    include ../../prod/svg/rarr.svg
                div(class="service-item service-item--right", id="park")
                    div(class="service-item-info")
                        div(class="service-item-info-inner")
                            div(class="service-item-name h1") Парк
                            div(class="service-item-description")
                                div(class="page-text")
