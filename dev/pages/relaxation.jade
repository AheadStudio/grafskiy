extends ../templates/base.jade

block content
    div(class="page-inner page-inner--w1")
        div(class="page-heading")
            h1(class="page-heading-title") Отдых


    div(class="page-inner page-inner--w2")
        div(class="page-text")
            cite(class="huge") Crisp alpine air flows down from above minglin hunting lodge combines two apparently incompatible worlds into an art of fine living
    
    
    div(class="page-inner page-inner--w1")
        div(class="relaxation")
            div(class="services-items")
                div(class="service-item service-item--left", id="pool")
                    div(class="service-item-info")
                        div(class="service-item-info-inner")
                            div(class="service-item-name h1") Бассейн
                            div(class="service-item-description")
                                div(class="page-text")
                                    p Просторный бассейн 16 х 50 метра с аквабаром и десткой зоны отлично подойдет для семейного отодыха
                                    dl
                                        dt Лежаков:
                                        dd 200
                                        dt Сезон:
                                        dd с мая по сентябрь
                                        dt Режим работы:
                                        dd  пн-сб с 10:00 до 20:00 
                                            br 
                                            | сб-вс с 9:00 о 21:00 
                                a(href="#", class="link link--large link--green") Подробнее
                    div(class="service-item-slider-holder")
                        div(class="service-slider")
                            div(class="service-slider-list")
                                div(class="service-slider-item")
                                    img(src="../dummy/pool/pool_1.png", class="service-slider-item-img")
                                div(class="service-slider-item")
                                    img(src="../dummy/pool/pool_1.png", class="service-slider-item-img")
