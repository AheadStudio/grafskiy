/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)
/*** //Settings ***/



/*** Fonts ***/
@font-face
	font-family "AcromRegular"
	src url("../fonts/acrom400.woff") format("woff")

@font-face
	font-family "GeoSlab712Medium"
	src url("../fonts/GeoSlb712MediumCBT.woff") format("woff")

@font-face
	font-family "GeoSlab712MediumItalic"
	src url("../fonts/GeoSlb712MediumCBT-Italic.woff") format("woff")

@font-face
	font-family "GeoSlab712Light"
	src url("../fonts/GeoSlb712LightCBT.woff") format("woff")

@font-face
	font-family "GeoSlab712LightItalic"
	src url("../fonts/GeoSlb712LightCBT-Italic.woff") format("woff")

@font-face
	font-family "GeoSlab712Bold"
	src url("../fonts/GeoSlb712BoldCBT.woff") format("woff")

@font-face
	font-family "GeoSlab712ExtraBold"
	src url("../fonts/GeoSlb712XBCBT.woff") format("woff")
/*** //Fonts ***/

/*** animate ***/
@-webkit-keyframes popUp
	0% {}
	70%
		-webkit-transform scale(1.1)
		opacity .8
		-webkit-animation-timing-function $transitionAnimation
	100%
		-webkit-transform scale(1);
		opacity 1

@keyframes popUp
	0% {}
	70%
		-webkit-transform scale(1.1)
		transform scale(1.1)
		opacity .8
		-webkit-animation-timing-function $transitionAnimation
		animation-timing-function $transitionAnimation
	100%
		-webkit-transform scale(1)
		transform scale(1)
		opacity 1


/*** //animate ***/

/*** Base ***/
html
body
	height 100%

body
	min-height 100%

	font-family "GeoSlab712Light"
	font-size 14px
	line-height 1.4
	letter-spacing 1px
	color #346E6A

	cursor default

.page
	width 100%
	min-height 100%
	min-width 1020px
	overflow hidden

.page-inner
	margin 0 auto

	box-sizing border-box

	&--relative
		position relative

	&--w0
		max-width 100%
		padding 0 50px

	&--w1
		max-width 1300px
		padding 0 25px

	&--w2
		max-width 1200px
		padding 0 25px

	&--w3
		max-width 820px

	&--bcg
		max-width 1400px

	&--cleared
		clearfix()

.page-content
	padding 0 0 820px 0
/*** //Base ***/



/*** Content ***/
.link
	box-sizing border-box
	display inline-block

	line-height 1
	text-decoration none

	transition .3s color $transitionAnimation, .3s border-bottom-color $transitionAnimation, 0.3s box-shadow $transitionAnimation

	.link-text
	.link-icon
		vertical-align middle

		display inline-block

	.link-icon
		margin-right 15px

		svg
			display block
			max-width 100%
			max-height 100%

			path
				transition .3s fill $transitionAnimation

	&[href*='tel:']
	/[href*='tel:']
		text-decoration none
		color inherit

	&--white

		border-bottom 1px solid rgba(255, 255, 255, 0.5)

		color #FFF

		&:hover
			border-bottom-color rgba(255, 255, 255, 0)

	&--green
		box-shadow inset 0 -2.9555px transparent, inset 0 -1px rgba(52, 110, 107, 0.5)

		color #346E6A

		&.link--large
			font-family "GeoSlab712LightItalic"
			font-size 14px
			line-height 30px
			text-transform uppercase
			letter-spacing 6px

		&.link--inverse
			border-bottom-color rgba(52, 110, 107, 0)

			&:hover
				border-bottom-color #A16849

		&:hover
			box-shadow inset 0 -2.9555px transparent, inset 0 -1px #A16849

			color #A16849

	&--darkgreen
		padding-bottom 8px
		box-sizing border-box
		border-bottom 1px solid #346e6b
		color #346e6b

		&.link--large
			font-size 14px
			font-family "GeoSlab712LightItalic"
			text-transform uppercase
			letter-spacing 6px

		&:hover
			border-bottom-color #A16849

			color #A16849

	&--gray
		border-bottom 1px solid #a6b9b5
		transition border-bottom 0.3s $transitionAnimation
		color #34776e
		&:hover
			border-bottom-color transparent


.btn
	box-sizing border-box
	display inline-block

	line-height 1
	text-decoration none
	text-align center

	transition .3s color $transitionAnimation, .3s border-bottom-color $transitionAnimation

	&--green
		padding 9px 30px 7px 30px

		background-color #FFF
		border 1px solid #305256

		font-family "GeoSlab712LightItalic"
		font-size 16px
		letter-spacing 4px
		line-height 30px
		text-transform uppercase
		color #346E6A

		transition .3s color $transitionAnimation, .3s background-color $transitionAnimation

		&:hover
			background-color #305256

			color #FFF

.page-text
	font-size 18px
	line-height 30px

	p
		margin-bottom 20px

		&:last-child
			margin-bottom 0

	h1
	/.h1
		margin-bottom 30px

		font-size 34px
		text-transform uppercase
		letter-spacing 6px

	h2
	/.h2
		margin-bottom 35px

		font-size 20px
		text-transform uppercase
		letter-spacing 3.3px

	.columns
		margin 100px 0

		column-count 2
		column-gap 50px

		p
			&:first-child
				&:first-letter
					font-size 54px
					text-transform capitalize

	cite
		margin 40px 0 50px 0px

		display block
		padding 0 110px

		font-family "GeoSlab712LightItalic"
		text-align center

		&.big
			font-size 30px
			line-height 40px
			letter-spacing 2.5px

		&.huge
			font-size 36px
			line-height 44px
			letter-spacing 2.5px

		&.small
			font-size 20px
			line-height 44px
			letter-spacing 2px
			text-transform uppercase

	dl
		margin-bottom 30px

		&:last-child
			margin-bottom 0

		dt
			float left
			padding-right 10px
			line-height 31px
			font-family "AcromRegular"
			font-size 14px
			text-transform uppercase
			letter-spacing 2px

		dd
			line-height 26px
			padding-bottom 10px
			font-family "GeoSlab712LightItalic"
			white-space nowrap
			&:last-child
				margin-bottom 0

	.icon
		svg
			display block
			margin 0 auto

	i
		font-style italic
		font-weight 600

	img
		display block
		width 100%
		max-width 100%
.photos
	display grid
	grid-template-columns auto auto
	grid-template-rows auto
	grid-gap: 0 10%

	&--about
		grid-template-areas "area1 area2" "area1 area3" "area4 area3"

	&--hall
		grid-template-areas "area1 area2" "area3 area2" "area3 area4"

	&--pool
		grid-template-areas "area1 area2" "area3 area2" "area3 area4"

	.photo-item
		margin-bottom 10%

		width 100%

		&.photo-item--one
			grid-area area1

		&.photo-item--two
			grid-area area2

		&.photo-item--three
			grid-area area3

		&.photo-item--four
			grid-area area4

		img
			margin 0 auto 45px auto

			display block
			width 100%
			height auto

		.photo-item-title
			margin-bottom 15px
			font-family GeoSlab712LightItalic
			font-size 18px
			text-transform uppercase
			letter-spacing 4px

	.sizer
		width 45%

	.gutter
		width 10%
/*** //Content ***/



/*** Header ***/
.page-header
	position relative
	z-index 1000

	box-sizing border-box
	display block
	width 100%
	padding 15px 0
	height 210px
	overflow hidden

	background-color #FFF

	.lang-bar
		position relative
		float left
		top 15px

		transition top .3s $transitionAnimation

		.lang-bar-item
			margin-bottom 10px

			display block

			border-bottom 1px solid transparent

			font-family "GeoSlab712LightItalic"
			font-size 14px
			line-height 1
			color #346E6A
			text-decoration none

			transition .3s border-bottom-color $transitionAnimation

			&:last-child
				margin-bottom 0

			&.current
				font-family "GeoSlab712MediumItalic"

			&:hover
				border-bottom-color #346E6A

	.header-controls
		position relative
		top 20px
		float right

		transition top .3s $transitionAnimation

	.header-logo
		margin 0 auto

		display block
		width 270px
		height 182px

		background url("../svg/logo.svg") no-repeat center center
		background-size contain

		text-decoration none

		transition .3s opacity $transitionAnimation

.header-booking
	position relative
	vertical-align middle
	margin-right 25px

	.link-icon
		width 35px
		height 31px

		svg
			display block

			path
				fill #346e6a

	.link-text
		position relative
		top 2px

		font-family "GeoSlab712LightItalic"
		font-size 16px
		color #346E6A
		text-transform uppercase
		letter-spacing 4px
		line-height 30px

	&:hover
		.link-icon
			svg
				path
					fill #A16849

.header-burger
	position relative
	vertical-align middle

	display inline-block
	width 30px
	height 19px

	cursor pointer

	&:after
	&:before
	.header-burger-inner
		content ""

		position absolute
		left 0

		display block
		width 100%
		height 1px

		background-color #346E6A

		transition .3s background-color $transitionAnimation, .3s transform $transitionAnimation

	&:after
		top 0

	&:before
		bottom 0

	.header-burger-inner
		top 50%
		margin-top -0.5px

	&:hover
		&:after
		&:before
		.header-burger-inner
			background-color #A16849

	&.active
		.header-burger-inner
			opacity 0

		&:before
			transform rotate(-45deg) translateY(-11px) translateX(2px)

		&:after
			transform rotate(45deg) translateY(10px) translateX(2px)

.page-heading
	margin 50px 0 40px 0

	text-align center

	.page-heading-title
		font-size 54px
		color #346E6A
		line-height 76px
		letter-spacing 9px
		text-transform uppercase

	.title-404
		margin-top 70px
		font-size 135px
		line-height 1
		color #346E6A
		text-transform uppercase

	.subtitle-404
		font-size 38px
		margin-top 10px
		text-transform uppercase
		letter-spacing 5px

	.back-404
		margin-top 15px
		font-size 17px
		font-family "GeoSlb712BoldCBT"
		font-weight 600
		line-height 1


/*** //Header ***/



/*** Header panel ***/
.header-panel
	position fixed
	z-index 990
	left 0
	top 0

	box-sizing border-box
	display none
	width 100%
	height 100%

	background-color #FFF
	opacity 0

	transition opacity .2s $transitionAnimation

	.header-panel-inner
		position absolute
		left 50%
		top 50%
		transform translate(-50%, -48%)

		box-sizing border-box
		display block
		width 100%
		max-width 950px

		opacity 0

		transition transform .3s $transitionAnimation, opacity .3s $transitionAnimation
		transition-delay .2s

	.header-panel-nav
		margin-bottom 130px

		overflow hidden

	.header-panel-col
		float left

		box-sizing border-box
		width (100/3)%

	.header-panel-menu
		.header-panel-menu-item-holder
			margin-bottom 15px

			&:last-child
				margin-bottom 0

				.header-panel-menu-item
					margin-bottom 0

		.header-panel-menu-item
			display inline-block

			border-bottom 1px solid transparent

			text-decoration none
			font-size 16px
			color #346E6A
			line-height 1

			transition color .3s $transitionAnimation

			&--large
				margin-bottom 60px

				font-size 24px
				text-transform uppercase
				letter-spacing 3.5px

			&:hover
				color #A16849

	.header-panel-social
		.header-panel-social-items
			position relative
			top -2px

		.header-panel-social-items
			vertical-align middle

			display inline-block

		.header-panel-social-item
			vertical-align middle
			margin-right 17px

			box-sizing border-box
			display inline-block
			width 36px
			height 36px

			border 1px solid #346E6A
			border-radius 50%

			font-size 0
			line-height 34px

			text-align center

			transition .3s border-color $transitionAnimation

			&:last-child
				margin-right 0

			svg
				vertical-align middle

				display inline-block

				path
					transition .3s fill $transitionAnimation

					fill #346E6A

			&:hover
				border-color #a16849

				svg
					path
						fill #a16849

	.header-panel-contacts
		font-size 16px
		line-height 32px

	.header-panel-communication
		font-size 18px
		line-height 32px

		.header-panel-email
			font-family "GeoSlab712LightItalic"
			line-height 30px
			text-transform uppercase


.menu-open-html
	overflow hidden
	position relative
	height 100%

.menu-open
	overflow hidden
	position relative
	height 100%


	.header-panel
		opacity 1

	.header-panel-inner
		opacity 1

		transform translate(-50%, -50%)

	.page-header
		.header-logo
			opacity 0

/*** //Header panel ***/



/*** Footer ***/
.page-footer
	margin-top -780px

	width 100%
	height 780px
	overflow hidden

	.footer-row
		padding 35px 0

		background-color #346E6A

		&--dark
			padding 60px 0

