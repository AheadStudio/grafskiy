		line-height 32px

	.footer-contacts-communication
		line-height 32px

		.footer-contacts-phone
			font-size 18px

		.footer-contacts-email
			font-family "GeoSlab712LightItalic"
			text-transform uppercase

.footer-nav
	float right

	width 66%

.footer-menu
	float left

	box-sizing border-box
	width 25%
	padding-right 40px

	.footer-menu-item-holder
		margin-bottom 15px

		&:last-child
			margin-bottom 0

	.footer-menu-item
		display inline-block

		border-bottom 1px solid transparent

		font-size 15px
		line-height 1
		color #FFF
		text-decoration none

		transition .3s border-bottom-color $transitionAnimation

		&--large
			margin-bottom 20px

			font-size 16px
			text-transform uppercase
			line-height 1

		&:hover
			border-bottom-color rgba(255, 255, 255, 0.5)

.footer-features
	float left

	padding-left 10px

	color #FFF

	.footer-feature-item
		vertical-align middle
		margin-right 50px

		display inline-block

		.footer-feature-item-icon
		.footer-feature-item-title
			vertical-align middle

			display inline-block

		.footer-feature-item-icon
			margin-right 15px

			svg
				display block
				max-width 100%
				height auto

				path
					fill #FFF

		.footer-feature-item-title
			font-family "GeoSlab712LightItalic"
			font-size 16px
			line-height 20px
			color #FFF
			text-transform uppercase

		&--wifi
			.footer-feature-item-icon
				width 35px
				height 35px

		&--parking
			.footer-feature-item-icon
				width 70pxpx
				height 35px

		&--temperature
			position relative
			top -2px
			margin-left 40px

			.footer-feature-item-icon
				margin-right 10px

			.footer-feature-item-title
				font-family "GeoSlab712Light"
				font-size 32px
				line-height 1

.footer-social
	float right
	margin-right 60px

	color #FFF

	.footer-social-items
		position relative
		top -2px

	.footer-social-items
	.footer-social-title
		vertical-align middle

		display inline-block

	.footer-social-item
		vertical-align middle
		margin-right 17px

		box-sizing border-box
		display inline-block
		width 36px
		height 36px

		border 1px solid #FFF
		border-radius 50%

		font-size 0
		line-height 34px

		text-align center

		transition .3s border-color $transitionAnimation

		&:last-child
			margin-right 0

		svg
			vertical-align middle

			display inline-block

			path
				transition .3s fill $transitionAnimation

		&:hover
			border-color #a16849

			svg
				path
					fill #a16849

	.footer-social-title
		margin-left 10px

		font-family "GeoSlab712LightItalic"
		font-size 16px
		line-height 20px
		text-transform uppercase

.footer-menu2
	.footer-menu2-item-holder
		vertical-align middle
		margin-right 15px

		display inline-block

		&:last-child
			margin-right 0

	.footer-menu2-item
		border-bottom 1px solid transparent

		font-size 16px
		line-height 1
		font-family "GeoSlab712LightItalic"
		color #FFF
		text-decoration none

		transition .3s border-bottom-color $transitionAnimation

		&:hover
			border-bottom-color rgba(255, 255, 255, 0.5)

.footer-copyrights
	float left

	font-size 16px
	line-height 1
	color #FFF

.footer-creators
	float right

	font-size 16px
	color #FFF
	line-height 1

	.footer-creator-item
		vertical-align middle

		display inline-block

		color #FFF
		line-height 1
		text-decoration none

		&:last-child
			margin-right 0

		.footer-creator-item-title
		.footer-creator-item-name
			vertical-align middle

			display inline-block

		.footer-creator-item-title
			margin-right 5px

		.footer-creator-item-name
			border-bottom 1px solid rgba(255, 255, 255, 0.8)

			transition .3s border-bottom-color $transitionAnimation

		&:hover
			.footer-creator-item-name
				border-bottom-color rgba(255, 255, 255, 0)
/*** //Footer ***/



/*** Scrolled header ***/
.fixed-header
.menu-open
	.page
		padding-top 210px

	.page-header
		position fixed
		left 0
		top 0

		padding 15px 0
		height 90px

		transform translateY(-100%)

		.lang-bar
			position relative
			top 15px

		.header-controls
			position relative
			top 20px

	&--show
		.page-header
			transform translateY(0)

			transition .4s transform $transitionAnimation

.menu-open
	.page-header
		transform translateY(0)
/*** //Scrolled header ***/



/*** Back icons ***/
.back-icons
	position absolute
	left 0
	top 0
	width 100%
	height 100%

	.page-inner
		position relative

	.back-icon-item
		position absolute
		z-index 2000

		display inline-block

		opacity 0

		transition .3s opacity $transitionAnimation, .3s transform $transitionAnimation

		&.show
			opacity 1

		&--1
