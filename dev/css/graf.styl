	.load-more
		position absolute

		left 50%
		margin-left -25px

		display block
		width 45px
		height 45px

		cursor pointer

		transition transform 0.3s $transitionAnimation

		&:hover
			transform rotate(360deg)

		&:before
			content ""
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			background-image url(../svg/circle-arrow.svg)
			background-repeat no-repeat
			background-size cover

		&.loading
			animation-name spin
			animation-duration 300ms
			animation-iteration-count infinite
			animation-timing-function linear


.news-detail
	margin-top 50px
	margin-bottom 83px

	.news-date
		margin 0 auto
		font-size 16px
		text-align center


	.page-heading
		margin 23px 0

	.news-detail-text
		p
			margin-bottom 30px

	.news-detail-pagination
		display flex
		justify-content space-between
		align-items center
		padding 27px 0
		border-top 1px solid black
		border-bottom 1px solid black

		.news-detail-pagination-prev
		.news-detail-pagination-next
			position relative
			display block
			color #336E6A
			text-decoration none
			box-sizing border-box

			&:hover
				&:before
					transform translateX(-10px)
				&:after
					transform translateX(10px)

		.news-detail-pagination-prev
			padding-left 65px

			&:before
				content ""
				position absolute
				left 0
				top 50%
				margin-top -7.5px
				display block
				width 45px
				height 15px
				background-image url("../svg/larr.svg")
				background-size contain
				background-repeat no-repeat
				transition transform 0.3s $transitionAnimation



		.news-detail-pagination-next
			padding-right 65px

			&:after
				content ""
				position absolute
				right 0
				top 50%
				margin-top -7.5px
				display block
				width 45px
				height 15px
				background-image url("../svg/rarr.svg")
				background-size contain
				background-repeat no-repeat
				transition transform 0.3s $transitionAnimation


		.news-detail-pagination-text
			color #336E6A
			font-size 16px
			line-height 25px
			font-family "GeoSlab712LightItalic"
			text-transform uppercase
			letter-spacing 5px

		.news-detail-pagination-delimiter
			display block
			height 85px
			width 1px
			background #000

