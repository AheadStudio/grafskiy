			left -150px
/*** //Back icons ***/



/*** Promo ***/
.promo
	position relative
	margin 10px 0 80px 0

	.promo-item
		position relative

		height 100%

		.promo-item-description
			position absolute
			left 0
			bottom 0

			box-sizing border-box
			width 100%
			padding 15px 0

			background-color #FFF

			font-size 14px
			line-height 20px

			transform translateZ(0)

			.promo-item-description-inner
				opacity 0

				transform translateY(10px)

				transition .3s opacity $transitionAnimation, .3s transform $transitionAnimation

	.fotorama__active
		.promo-item
			.promo-item-description
				.promo-item-description-inner
					opacity 1

					transform translateY(0)

	.promo-nav
